<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_delete_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_thin"
        android:text="Change Password"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/tv_delete_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Please Fill in the Information Below to Update Your Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_delete_item"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/black"
        />





    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_delete_message"
        app:layout_constraintStart_toStartOf="parent"
        app:startIconDrawable="@drawable/baseline_lock_24"
        app:startIconTint="@color/g_blue"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="@color/white"
        app:counterEnabled="true"
        app:counterMaxLength="25"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/g_blue"
        android:textColorHint="@color/black"
        app:helperTextEnabled="true"
        app:helperText="Enter Password"
        app:helperTextTextColor="@color/g_blue"
        android:hint="Input Your Current Password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/InputPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:typeface="sans"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="parent"
        app:startIconDrawable="@drawable/baseline_lock_24"
        app:startIconTint="@color/g_blue"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="@color/white"
        app:counterEnabled="true"
        app:counterMaxLength="25"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/g_blue"
        android:textColorHint="@color/black"
        app:helperTextEnabled="true"
        app:helperText="Enter Password"
        app:helperTextTextColor="@color/g_blue"
        android:hint="Input Your New Password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/InputPassword2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:typeface="sans"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/password2"
        app:layout_constraintStart_toStartOf="parent"
        app:startIconDrawable="@drawable/baseline_lock_24"
        app:startIconTint="@color/g_blue"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="@color/white"
        app:counterEnabled="true"
        app:counterMaxLength="25"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/g_blue"
        android:textColorHint="@color/black"
        app:helperTextEnabled="true"
        app:helperText="Enter Password"
        app:helperTextTextColor="@color/g_blue"
        android:hint="Confirm Your New Password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/InputPassword3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:typeface="sans"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/password3"
        app:layout_constraintTop_toBottomOf="@id/password3"
        app:layout_constraintEnd_toEndOf="@id/tv_delete_message"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp">



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pay"
            android:layout_width="200dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/tv_delete_message"
            app:layout_constraintStart_toStartOf="@id/tv_delete_message"
            android:text="Change Password"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>